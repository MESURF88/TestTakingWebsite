<form id="test_spiritTest" action="/spiritTest/{{id}}" method="post">
	<fieldset>
		<legend>Q1</legend>
		<p>
			<label>Do you find yourself howling at the moon?</label></br>
			<input type = "radio"
				name = "0"
				id = "Q0_0"
				value = "0" />
			<label for = "Q0_0">Yes, more often than I care to admit.</label></br>
			<input type = "radio"
				name = "0"
				id = "Q0_1"
				value = "1" />
