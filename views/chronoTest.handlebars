				id = "Q1_3"
				value = "3" />
			<label for = "Q1_3">High.</label></br>
			<input type = "radio"
				name = "1"
				id = "Q1_4"
				value = "4" />
			<label for = "Q1_4">Very High.</label></br>
		</p>
	</fieldset>

	<fieldset>
		<input type="submit" value="Submit" class="btn btn-primary" style="margin-left: 40%;"/>
	</fieldset>
	<fieldset hidden>
