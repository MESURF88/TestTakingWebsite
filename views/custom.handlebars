<div class="center_buttons">
    <p style="display:inline; padding:10px;">Reset all the custom result fields.</p>
    <button id="resetButton" onclick="resetCustom()" class="btn btn-secondary" style="display:inline float:right; padding-top:1px;"/>Reset </button>   
</div>
<footer style="text-align:center">*All of the custom results will persist after Checking Results.</footer>
<p id="sessions_manip" style="display:none">{{session_arr}}</p>
<script type="text/javascript">
$(document).ready(function(){
    //on load populate selects (I wish I knew a better way to do this with node and express, too bad.)
    $(function() {
        var str = $('#sessions_manip').text().split(",");
        $('#ipipSelect').val(str[0]);
        $('#jtSelect').val(str[1]);
        $('#discSelect').val(str[2]);
        $('#fpqSelect').val(str[3]);
        $('#eqSelect').val(str[4]);
        $('#eopsSelect').val(str[5]);
        $('#chronoSelect').val(str[6]);
        $('#spiritSelect').val(str[7]);
    });
});
</script>



